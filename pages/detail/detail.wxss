/* pages/detail/detail.wxss */
.detail-con{
  display: flex;
  flex-direction:column;
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
}
.d{
  display: flex;
  padding:15rpx;
}
.d-img{
  flex-shrink: 0;
  width: 295rpx;
  height: 455rpx;
}
.d-dia{
  margin-left: 20rpx;
  font-size: 25rpx;
  overflow: hidden;
}
.d-dia-type{
  font-size: 25rpx;
  margin-right: 20rpx;
}
.d-dia-topic{
  font-weight: bold;
  font-size: 36rpx;
}
.hot-com{
  padding: 15rpx;
  border-bottom:1rpx solid #e5e5e5;
}
.com{
  flex:auto;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}
.com-con{
  display: flex;
  border-bottom: 1rpx solid #e9e9e9;
  margin:20rpx;
}
.com-con:last-child{
  border:none;
}
.com-con-pic{
  width: 100rpx;
  height: 100rpx;
  flex-shrink:0;
  border-radius: 50%;
  margin-right: 25rpx;
}
.com-con-detail{
  padding: 10rpx;
  font-size: 28rpx;
  flex:1;
}
.detail-m1{
  margin-bottom:15rpx;
}
.detail-m2{
  font-size: 25rpx;
}
.detail-m3{
  font-size: 20rpx;
  color:#999;
  text-align:right;
}
.m3-i{
  margin-right: 10rpx;
}
.d-dia-short-detail{
  padding:15rpx;
  font-size: 20rpx;
}